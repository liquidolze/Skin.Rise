<!--RISE-->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>!Window.IsVisible(fullscreeninfo) + [VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding] | Window.IsVisible(script-XBMC-Subtitles-main.xml)</visible>
	
	<controls>

		<control type="group">
			<visible>!Window.IsActive(filebrowser)</visible>
			<visible>!Window.IsActive(videoosd)</visible>	

			<animation time="600" effect="fade">Visible</animation> 
			<animation time="600" effect="fade">Hidden</animation>	

			<animation time="600" effect="fade">WindowOpen</animation> 
			<animation time="600" effect="fade">WindowClose</animation>		
			
	
			<!--Panel-->
			<control type="image">				
				<posx>210</posx>
				<posy>700</posy>
				<width>1560</width>
				<height>376</height>			
				<texture>osd/osd_panel.png</texture>
			</control>			
	
			<!--Pause-->
			<control type="image">	
				<visible>player.paused</visible>
				<visible>!Window.IsVisible(script-XBMC-Subtitles-main.xml)</visible>	
				<animation time="600" effect="fade">Visible</animation> 
				<animation time="600" effect="fade">Hidden</animation>	
				<posx>760</posx>	<!--Center 960-->
				<posy>340</posy>	<!--Center 540-->
				<width>400</width>
				<height>400</height>
				<texture>osd_pause.png</texture>			
			</control>			
	
			<!--FF/RW-->
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>FFx2</label>				
				<visible>player.forwarding2x</visible>
			</control>	
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>FFx4</label>
				<visible>player.forwarding4x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>FFx8</label>
				<visible>player.forwarding8x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>FFx16</label>
				<visible>player.forwarding16x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>FFx32</label>
				<visible>player.forwarding32x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>RWx2</label>
				<visible>player.rewinding2x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>RWx4</label>
				<visible>player.rewinding4x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>RWx8</label>
				<visible>player.rewinding8x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>RWx16</label>
				<visible>player.rewinding16x</visible>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<height>1080</height>
				<width>1920</width>
				<align>center</align>
				<aligny>center</aligny>
				<font>RISELight270</font>
				<textcolor>OSDSeekbar</textcolor>
				<label>RWx32</label>
				<visible>player.rewinding32x</visible>
			</control>
	
			<!--Cover-->
			<control type="image">	<!--No Movie-->						
				<posx>290</posx>
				<posy>775</posy>
				<width>220</width>
				<height>220</height>
				<fadetime>200</fadetime>
				<texture background="true" fallback="coverdefault.png" >$INFO[VideoPlayer.Cover]</texture>
				<aspectratio align="top" aligny="top">keep</aspectratio>				
				<visible>!VideoPlayer.Content(Movies)</visible>
			</control>
			<control type="image">	<!--Movie-->				
				<posx>290</posx>
				<posy>775</posy>
				<width>155</width>
				<height>220</height>
				<fadetime>200</fadetime>			
				<texture background="true" fallback="posterdefault.png" diffuse="postermatte.png">$INFO[VideoPlayer.Cover]</texture>
				<aspectratio  align="left" aligny="top">stretch</aspectratio>			
				<visible>VideoPlayer.Content(Movies)</visible>
			</control>	
	
			<!--Label Movie-->			
			<control type="label">
				<visible>VideoPlayer.Content(Movies)</visible>
				<posx>550</posx>
				<posy>770</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE45</font>
				<textcolor>White</textcolor>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<scroll>false</scroll>
			</control>			
			<control type="label">
				<visible>VideoPlayer.Content(Movies)</visible>
				<posx>550</posx>
				<posy>820</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE35</font>
				<textcolor>MainBlue</textcolor>
				<label>$INFO[VideoPlayer.Genre] • $INFO[VideoPlayer.Year]</label>
				<scroll>false</scroll>
			</control>
			
			<!--Label Episode-->			
			<control type="label">
				<visible>VideoPlayer.Content(Episodes)</visible>
				<posx>550</posx>
				<posy>770</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE45</font>
				<textcolor>White</textcolor>				
				<label>[B]$INFO[VideoPlayer.Episode]. $INFO[VideoPlayer.Title][/B]</label>				
				<scroll>false</scroll>
			</control>			
			<control type="label">
				<visible>VideoPlayer.Content(Episodes)</visible>
				<posx>550</posx>
				<posy>820</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE35</font>
				<textcolor>MainBlue</textcolor>
				<label>$INFO[VideoPlayer.TVShowTitle] • $LOCALIZE[20373] $INFO[VideoPlayer.Season]</label>
				<scroll>false</scroll>
			</control>
			
			<!--Label Ohter-->			
			<control type="label">
				<visible>!VideoPlayer.Content(Movies) + !VideoPlayer.Content(Episodes)</visible> 
				<posx>550</posx>
				<posy>770</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE45</font>
				<textcolor>White</textcolor>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<scroll>false</scroll>
			</control>	
			
	
	
			<!--Time-->
			<control type="label"><!--Left Play Time-->
				<posx>550</posx>
				<posy>880</posy>
				<width>200</width>
				<align>left</align>
				<font>RISELight32</font>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label"><!--Right Time Remaining-->
				<posx>1660</posx>
				<posy>880</posy>
				<width>200</width>
				<align>right</align>
				<font>RISELight32</font>
				<label>- $INFO[Player.TimeRemaining]</label>
			</control>
			<control type="label"><!--End Time-->
				<posx>550</posx>
				<posy>952</posy>
				<width>300</width>
				<align>left</align>
				<font>RISELight32</font>
				<label>$LOCALIZE[41040] $INFO[Player.FinishTime]</label>
			</control>
			
			<control type="grouplist"><!--Clock-->
				<posx>1410</posx>
				<posy>770</posy>
				<width>400</width>
				<height>100</height>
				<align>center</align>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>animation_fade</include>			
					<control type="label">				
						<width min="0" max="150">auto</width>
						<height>80</height>
						<info>System.Time(hh:mm)</info>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>
					<control type="label">				
						<visible>substring(system.time,AM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>AM</label>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>					
					<control type="label">				
						<visible>substring(system.time,PM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>PM</label>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>
				</control>
		
			<!--Process/Seekbar-->
			<control type="progress" id="23">
				<description>Progress Bar</description>
				<posx>700</posx>
				<posy>905</posy>
				<width>800</width>
				<info>Player.Progress</info>
				<visible>true</visible>
			</control>
			<control type="slider" id="401">
				<description>Seekbar</description>
				<posx>700</posx>
				<posy>905</posy>
				<width>800</width>				
				<visible>Player.Seeking</visible>
			</control>			
	
			<!--Flags-->
			<control type="grouplist">												
				<posx>1270</posx>
				<posy>945</posy>
				<width>400</width>
				<height>70</height>
				<align>right</align>
				<itemgap>3</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				
				<!--Image-->
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>120</width>
					<height>80</height>	
					<colordiffuse>aaFFFFFF</colordiffuse>
					<texture fallback="flags/default_video.png">$INFO[VideoPlayer.VideoCodec,flags/videocodec/,.png]</texture>
				</control>	
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>120</width>
					<height>80</height>	
					<colordiffuse>aaFFFFFF</colordiffuse>
					<texture fallback="flags/default_resolution.png">$INFO[VideoPlayer.VideoResolution,flags/resolution/,.png]</texture>
				</control>		
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>120</width>
					<height>80</height>	
					<colordiffuse>aaFFFFFF</colordiffuse>		
					<texture fallback="flags/default_sound.png">$INFO[VideoPlayer.AudioCodec,flags/audio/,.png]</texture>
				</control>				
			</control>				

		</control>
	
	</controls>

</window>