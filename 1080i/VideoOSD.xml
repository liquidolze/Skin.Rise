				<scroll>false</scroll>
			</control>
			
			<!-- Label Episode-->			
			<control type="label">
				<visible>VideoPlayer.Content(Episodes)</visible>
				<posx>550</posx>
				<posy>770</posy>
				<width>900</width>
				<align>left</align>
				<font>RISE45</font>
