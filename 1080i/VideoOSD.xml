				<posx>550</posx>
				<posy>880</posy>
				<width>200</width>
				<align>left</align>
				<font>RISELight32</font>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label"><!--Right Time Remaining-->
				<posx>1660</posx>
				<posy>880</posy>
				<width>200</width>
				<align>right</align>
				<font>RISELight32</font>
				<label>- $INFO[Player.TimeRemaining]</label>
			</control>
			<control type="label"><!--End Time-->
				<posx>550</posx>
				<posy>952</posy>
				<width>300</width>
				<align>left</align>
				<font>RISELight32</font>
				<label>$LOCALIZE[41040] $INFO[Player.FinishTime]</label>
			</control>			
			
			<control type="grouplist"><!--Clock-->
				<posx>1410</posx>
				<posy>770</posy>
				<width>400</width>
				<height>100</height>
				<align>center</align>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>animation_fade</include>			
					<control type="label">				
						<width min="0" max="150">auto</width>
						<height>80</height>
						<info>System.Time(hh:mm)</info>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>
					<control type="label">				
						<visible>substring(system.time,AM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>AM</label>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>					
					<control type="label">				
						<visible>substring(system.time,PM,right)</visible>
						<width min="0" max="150">auto</width>
						<height>80</height>
						<label>PM</label>
						<font>RISE45</font>
						<aligny>center</aligny>
						<textcolor>MainBlue</textcolor>
					</control>
				</control>

