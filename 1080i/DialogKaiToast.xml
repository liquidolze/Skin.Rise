<!-- RISE -->
<window id="107">	
	<defaultcontrol always="true">402</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	
	<controls>
	
		<control type="group">			
			<include>Dim</include>		
		</control>
		
		<control type="group">			
			<posx>570</posx>
			<posy>333</posy>	
			
			<animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="zoom" start="200" end="100" time="300" center="960,540" tween="sine" easing="inout" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="300" tween="sine" easing="inout" />
                <effect type="zoom" start="100" end="50" time="300" center="960,540" tween="sine" easing="inout" />
            </animation>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>768</width>
				<height>549</height>
				<texture>dialog_background_big.png</texture>
			</control>

			<control type="label" id="401">
				<description>heading</description>
				<posx>80</posx>
				<posy>100</posy>
				<width>600</width>
				<label>-</label>
				<font>RISE40</font>				
				<align>left</align>			
			</control>

			<control type="label" id="402">
				<description>message</description>
				<posx>80</posx>
				<posy>180</posy>
				<width>600</width>
				<label>-</label>
				<align>left</align>
				<scroll>true</scroll>
				<scrollspeed>30</scrollspeed>
			</control>			

			
		</control>

	</controls>

</window>