<?xml version="1.0" encoding="UTF-8"?>
<!-- RISE -->
<window id="0">
	<defaultcontrol always="true">300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<onload>Skin.Reset(youtube)</onload>
	<onload>Skin.Reset(OtherView)</onload>
	<animation type="WindowClose">
	<effect type="fade" start="100" end="0" time="400" />
	</animation>

	
	<controls>

		<include>GlobalBackground</include>

		
		<control type="label">
			<posx>20</posx>
			<posy>10</posy>
			<width min="20" max="530">auto</width>
			<height>100</height>
			<label>Start</label>
			<font>Large</font>
			<textcolor>White</textcolor>
			<aligny>top</aligny>
		</control>
	
<!-------------------------------------------------------------------------------------------->
<!--								List 300		    -->
<!-------------------------------------------------------------------------------------------->	
	
		 <control type="panel" id="300">
			 <description>Home Menu</description>
				<posx>585</posx>
				<posy>125</posy>
				<width>690</width>
				<height>536</height>
				<!--onleft>8001</onleft-->
				<onleft condition="Container(300).Hasfocus(1)">8001</onleft> 
				<onleft condition="Container(300).Hasfocus(4)">8002</onleft>
				<onleft condition="Container(300).Hasfocus(7)">8003</onleft>
				<onright>50</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<scrolltime>200</scrolltime>
				<itemlayout width="230" height="182">
				
					<control type="image">
						<width>218</width>
						<height>170</height>
						<posx>0</posx>
						<posy>0</posy>
						<texture>colors/color_black.png</texture>
					</control>
					
					<control type="image">
						<width>218</width>
						<height>170</height>
						<posx>0</posx>
						<posy>0</posy>
						<texture>case6.png</texture>
					</control>
					
					<control type="image">
						<width>223</width>
						<height>171</height>
						<posx>0</posx>
						<posy>0</posy>
						<texture>$INFO[ListItem.Thumb]</texture>
						<aspectratio>scale</aspectratio>
					</control>


				</itemlayout>
				<focusedlayout width="230" height="177">

					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>218</width>
						<height>170</height>
						<texture>colors/color_grey.png</texture>
						
					</control>
					
					<control type="image">
						<width>218</width>
						<height>170</height>
						<posx>0</posx>
						<posy>0</posy>
						<texture>case6.png</texture>
					</control>
					
					<control type="label">
						<posx>10</posx>
						<posy>130</posy>
						<width>205</width>
						<height>40</height>
						<font>Medium</font>
						<aligny>top</aligny>
						<align>left</align>
						<textcolor>White</textcolor>
						<shadowcolor>ff333333</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<control type="label">
						<posx>215</posx>
						<posy>15</posy>
						<width>205</width>
						<height>40</height>
						<font>Medium</font>
						<aligny>top</aligny>
						<align>right</align>
						<textcolor>White</textcolor>
						<shadowcolor>ff333333</shadowcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>

				</focusedlayout>
				
				<content>

					
					<item id="1">
						<description>Filme</description>
						<label>Movies</label>
						<label2>$INFO[Window.Property(Movies.Count)]</label2>
						<thumb>home/home_movie.png</thumb>
						<onclick>ActivateWindow(Video,movietitles,return)</onclick>
						<visible>Library.HasContent(Movies)</visible>
						<visible>!Skin.HasSetting(HomeMenuNoMoviesButton)</visible>
					</item>
									
					<item id="2">
						<description>Live-TV</description>
						<label>Live-TV</label>
						<onclick>ActivateWindow(MyPVR)</onclick>
						<thumb>home/home_live-tv1.png</thumb>
					</item>
					
					<item id="3">
						<label>Bilder</label>
						<thumb>home/home_pictures.png</thumb>
						<onclick>ActivateWindow(MyPicturesSettings)</onclick>
					</item>
					
					<item id="4">
						<label>TV-Serien</label>
						<thumb>home/home_tvshow.png</thumb>
						<label2>$INFO[Window.Property(TVShows.Count)]</label2>
						<onclick>ActivateWindow(Video,tvshowtitles)</onclick>
						<visible>Library.HasContent(TVShows)</visible>
						<visible>!Skin.HasSetting(HomeMenuNoTVShowsButton)</visible>
					</item>
					
					<item id="5">
						<label>Wetter</label>
						<label>31010</label>
						<thumb>home/home_weather.png</thumb>
						<label2>$INFO[Weather.Conditions] : $INFO[Weather.Temperature]</label2>
						<onclick>ActivateWindow(weather)</onclick>
					</item>
					
					<item id="6">
						<description>Favourites</description>
						<label>31008</label>
						<onclick>ActivateWindow(Favourites)</onclick>
						<thumb>home/home_favourites.png</thumb>
					</item>
					
					<item id="7">
						<description>Music</description>
						<label>Musik</label>
						<onclick>ActivateWindow(music)</onclick>
						<thumb>home/home_music.png</thumb>
						<label2>$INFO[Window.Property(Music.AlbumsCount)]</label2>
					</item>
					
					<item id="8">
						<description>Settings</description>
						<label>31012</label>
						<onclick>ActivateWindow(settings)</onclick>
						<thumb>home/home_settings.png</thumb>
					</item>
					
					<item id="9">
						<description>Shutdown</description>
						<label>31013</label>
						<onclick>ActivateWindow(shutdownmenu)</onclick>
						<thumb>home/home_shutdown.png</thumb>
					</item>
				<!--item id="10">
					<description>Videos</description>
					<label>31003</label>
					<onclick>ActivateWindow(Video,files)</onclick>
				</item-->
				
				<item id="10">	<!--Video-->						
					<label>Videos</label>	
					<thumb>home/home_videos.png</thumb>
					<onclick>ActivateWindow(Video,root)</onclick>
					<visible>!Skin.HasSetting(HomeMenuNoVideosButton)</visible>
				</item>

					<item id="11">
						<description>Programs</description>
						<label>31002</label>
						<onclick>ActivateWindow(Programs,Addons)</onclick>
						<thumb>home/home_addons.png</thumb>
					</item>
					<item id="12">
						<description>File manager</description>
						<label>31011</label>
						<onclick>ActivateWindow(filemanager)</onclick>
						<thumb>home/home_filemanager.png</thumb>
					</item>					
					<item id="13">
						<description>Play Disc</description>
						<label>31014</label>
						<onclick>PlayDVD</onclick>
						<visible>System.HasMediadvd</visible>
					</item>					
				</content>
			</control>
			
	<include>HomeWidget</include>

		<control type="rss">
			<description>RSS Feed</description>
			<posx>587</posx>
			<posy>690</posy>
			<width>670</width>
			<height>14</height>
			<font>Small</font>
			<urlset>1</urlset>
			<titlecolor>Red</titlecolor>
			<headlinecolor>White</headlinecolor>
			<textcolor>White</textcolor>
		</control>

	</controls>

</window>